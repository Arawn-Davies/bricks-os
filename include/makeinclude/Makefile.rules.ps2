#----------------------------------------------------------------------------
# PS2
#----------------------------------------------------------------------------
MY_INCL_PATH    +=\
                -I$(PS2SDK)/ee/include \
                -I$(PS2SDK)/common/include

MY_LIBS_PATH	+=\
                -L$(PS2SDK)/ee/lib \

#----------------------------------------------------------------------------
CROSS_COMPILE	=ee-
CFLAGS		=-D_EE -O2 -G0 -Wall
CXXFLAGS	=$(CFLAGS)
LFLAGS		=-mno-crt0 -T$(BRICKS_ROOT)/include/makeinclude/link.ps2 $(MY_LIBS_PATH)

#----------------------------------------------------------------------------
STARTUP_LIBS	=\
                -lsupc++ \
                -ldebug \
                -lc \
                -lsyscall \
                $(PS2SDK)/ee/lib/libkernel.a \

#----------------------------------------------------------------------------
# Create .elf file from MY_OBJS + MY_LIBS
$(MY_ELF): $(MY_OBJS)
	@echo [CC ] $@
	$(CC) $(LFLAGS) -o $@ $(PS2SDK)/ee/startup/crt0.o $^ $(MY_LIBS_PATH) $(MY_LIBS) $(STARTUP_LIBS)
