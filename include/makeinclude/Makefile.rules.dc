#----------------------------------------------------------------------------
# Dreamcast
#----------------------------------------------------------------------------
MY_INCL_PATH    +=\

MY_LIBS_PATH    +=\

#----------------------------------------------------------------------------
CROSS_COMPILE   =sh-elf-
CFLAGS          +=\
                -ml \
                -m4-single-only \

CXXFLAGS        +=\
                -ml \
                -m4-single-only \

ASFLAGS         +=\
                -ml \
                -m4-single-only \

LDFLAGS         +=\
                -EL \

LINK_FLAGS      +=\
                -ml \
                -m4-single-only \
                -Wl,-Ttext=0x8c010000 \
                -nostartfiles \
                -nostdlib \
                $(MY_LIBS_PATH) \

#----------------------------------------------------------------------------
STARTUP_LIBS    =\
                -lgcc \

#----------------------------------------------------------------------------
# Create .elf file from MY_OBJS + MY_LIBS
$(MY_ELF): $(MY_OBJS) $(MY_LIBS_DEP)
	@echo [CC ] $@
	$(CXX) $(LINK_FLAGS) -o $@ $(MY_OBJS) $(MY_LIBS_PATH) $(MY_LIBS) $(STARTUP_LIBS)
