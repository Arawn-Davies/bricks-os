#----------------------------------------------------------------------------
# NGC
#----------------------------------------------------------------------------
MY_INCL_PATH    +=\

MY_LIBS_PATH    +=\

#----------------------------------------------------------------------------
CROSS_COMPILE   =powerpc-gekko-
CFLAGS          +=\
                -mcpu=750 \
                -meabi \
                -mhard-float \
                -DGEKKO \

CXXFLAGS        +=\
                -mcpu=750 \
                -meabi \
                -mhard-float \
                -DGEKKO \

LFLAGS          +=\
                -mcpu=750 \
                -meabi \
                -mhard-float \
                -DGEKKO \
                -mogc \
                -logc \
                $(MY_LIBS_PATH) \

#----------------------------------------------------------------------------
# Create .elf file from MY_OBJS + MY_LIBS
$(MY_ELF): $(MY_OBJS) $(MY_LIBS_DEP)
	@echo [CC ] $@
	$(CXX) $(LFLAGS) $(MY_OBJS) $(MY_LIBS) -o $@
