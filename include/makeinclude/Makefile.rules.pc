#----------------------------------------------------------------------------
# PC
#----------------------------------------------------------------------------
MY_INCL_PATH    +=\

MY_LIBS_PATH    +=\

#----------------------------------------------------------------------------
CROSS_COMPILE   =
CFLAGS          +=\
                -m32 \
                -nostdinc \
                -fno-stack-protector \

CXXFLAGS        +=\
                -m32 \
                -nostdinc \
                -fno-builtin \
                -fno-stack-protector \
                -fno-threadsafe-statics \

LFLAGS          +=\
                -T $(BRICKS_ROOT)/include/makeinclude/link.i386 \
                -nostdlib \
                $(CXXFLAGS) \
                $(MY_LIBS_PATH) \

#----------------------------------------------------------------------------
# Create .elf file from MY_OBJS + MY_LIBS
$(MY_ELF): $(MY_OBJS) $(MY_LIBS_DEP)
	@echo [CC ] $@
	$(CXX) $(LFLAGS) $(MY_OBJS) $(MY_LIBS) -o $@

#----------------------------------------------------------------------------
# Create object file from .asm file
$(VDIR)%.o: %.asm $(VDIR).creation_stamp
	@echo [ASM] $<
	nasm -f elf -o $@ $<
