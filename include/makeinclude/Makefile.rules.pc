#----------------------------------------------------------------------------
# PC
#----------------------------------------------------------------------------
MY_INCL_PATH    +=\

MY_LIBS_PATH    +=\

#----------------------------------------------------------------------------
CROSS_COMPILE   =
CFLAGS          +=\
                -m32 \
                -nostdinc \
                -fno-stack-protector \

CXXFLAGS        +=\
                -m32 \
                -nostdinc \
                -fno-builtin \
                -fno-stack-protector \
                -fno-threadsafe-statics \

LDFLAGS         +=\
                -nostdlib \
                -Wl,-Map,$@.map \

#----------------------------------------------------------------------------
# Create .elf file from MY_OBJS + MY_LIBS
$(MY_ELF): $(MY_OBJS) $(MY_LIBS_DEP)
	@echo [CC ] $@
	$(CXX) -T$(BRICKS_ROOT)/include/makeinclude/link.pc $(LDFLAGS) $(MY_OBJS) $(MY_LIBS_PATH) $(MY_LIBS) -o $@
