#----------------------------------------------------------------------------
# DS ARM9
#----------------------------------------------------------------------------
MY_INCL_PATH	+=\
                -I$(DEVKITPRO)/libnds/include \

MY_LIBS_PATH	+=\
                -L$(DEVKITPRO)/libnds/lib \

#----------------------------------------------------------------------------
CROSS_COMPILE   =arm-eabi-
CFLAGS          +=-mcpu=arm9tdmi -mtune=arm9tdmi -fomit-frame-pointer -ffast-math -mthumb-interwork -DARM9
CXXFLAGS        +=-mcpu=arm9tdmi -mtune=arm9tdmi -fomit-frame-pointer -ffast-math -mthumb-interwork -DARM9
LFLAGS          +=-mthumb-interwork -specs=ds_arm9.specs $(MY_LIBS_PATH)

#----------------------------------------------------------------------------
# Create .elf file from MY_OBJS + MY_LIBS
$(MY_ELF): $(MY_OBJS)
	@echo [CC ] $@
	$(CXX) $(LFLAGS) $^ $(MY_LIBS) -lnds9 -o $@
