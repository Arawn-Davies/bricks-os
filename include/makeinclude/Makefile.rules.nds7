#----------------------------------------------------------------------------
# DS ARM7
#----------------------------------------------------------------------------
MY_INCL_PATH	+=\

MY_LIBS_PATH	+=\

#----------------------------------------------------------------------------
CROSS_COMPILE   =arm-eabi-
CFLAGS          +=-mcpu=arm7tdmi -mtune=arm7tdmi -fomit-frame-pointer -ffast-math -mthumb -mthumb-interwork -falign-functions=32 -DNDS -DNDS7
CXXFLAGS        +=-mcpu=arm7tdmi -mtune=arm7tdmi -fomit-frame-pointer -ffast-math -mthumb -mthumb-interwork -falign-functions=32 -DNDS -DNDS7
LFLAGS          +=-mthumb -mthumb-interwork -specs=ds_arm7.specs $(MY_LIBS_PATH)

#----------------------------------------------------------------------------
# Create .elf file from MY_OBJS + MY_LIBS
$(MY_ELF): $(MY_OBJS)
	@echo [CC ] $@
	$(CXX) $(LFLAGS) $^ $(MY_LIBS) -o $@
